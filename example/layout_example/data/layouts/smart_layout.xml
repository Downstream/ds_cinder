<interface>

	<layout name="root_layout"
		size="400, 500"
		color="#999999"
		layout_spacing="10"
		layout_type="vert"
		layout_size_mode="flex"
		position="800, 400"
		enable="true"
		multitouch="all"
		center="0.5, 0.5"
		animate_on="grow:0, 0; fade:-1.0; slide:0, 0; ease:none; duration:0.35; delay:0.25"
		>

		<layout
			color="ffffff"
			size="400, 100"
			layout_h_align="center"
			l_pad="40"
			r_pad="40"
			t_pad="10"
			layout_size_mode="stretch"
			opacity="0.0"
			animate_on="opacity:1.0; slide:-200; duration:0.5; delay:0.6"/>
		<layout
			color="ffffff"
			size="400, 100"
			layout_h_align="center"
			l_pad="40"
			r_pad="40"
			t_pad="0"
			layout_size_mode="stretch"
			animate_on="opacity:1.0; slide:-100; duration:0.5; delay:0.7">
			<text name="event_text"
				text="Am I idling?"
				font="sample:config"
				color="black"
				text_align="center"
				layout_size_mode="flex"
				/>
		</layout>

		<gradient
			layout_size_mode="fill"
			colorLeft="ff00ff"
			colorRight="00ff00"
			blend_mode="multiply"
			l_pad="-20"
			r_pad="-20"
			t_pad="-20"
			b_pad="-20"
			opacity="0.5"
			>
		</gradient>

		<layout
			color="000000"
			size="400, 100"
			layout_h_align="center"
			l_pad="40"
			r_pad="40"
			t_pad="0"
			layout_size_mode="stretch"
			opacity="0.0"
			animate_on="opacity:1.0; slide:100; duration:0.5; delay:0.8">

			<text name="sample_text"
				text="Hey! This is a smart layout!"
				font="sample:config"
				/>
		</layout>
		<layout
			color="ffffff"
			size="400, 100"
			layout_h_align="center"
			l_pad="40"
			r_pad="40"
			t_pad="0"
			layout_size_mode="stretch"
			opacity="0.0"
			animate_on="opacity:1.0; slide:200; duration:0.5; delay:0.9"/>
		<sprite name="farts" size="400, 10" color="ffffff" animate_on="fade:"/>
		<sprite color="#333333" size="400, 100" layout_h_align="center" l_pad="10" r_pad="10" layout_size_mode="stretch"/>
	</layout>

</interface>

