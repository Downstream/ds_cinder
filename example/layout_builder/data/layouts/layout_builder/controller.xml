<interface>

	<layout name="layout" 
		layout_spacing="2" 
		layout_type="vert" 
		layout_size_mode="flex" 	
		shrink_to_children="both"
		>
		
		
		
		<sprite_button name="restart_button" 
		width="200"
		height="35"
		animate_on="slide:-100; fade:-1.0; delay:0.4; duration:0.5; ease:outBack"
		>
			<sprite
				color="eeeeee"
				opacity="0.9"
				blend_mode="normal"
				size="200, 35" />
			<image 
				src="%APP%/data/images/ui/close_button.png"
				scale="0.5, 0.5"
				color="222222"
				position="2, 2"/>
			<text
				font="button:text"
				position="45, 8"
			>restart app</text>
		</sprite_button>
		
		<sprite_button name="refresh_button" 
		width="200"
		height="35"
		animate_on="slide:-100; fade:-1.0; delay:0.4; duration:0.5; ease:outBack"
		>
			<sprite
				color="eeeeee"
				opacity="0.9"
				blend_mode="normal"
				size="200, 35" />
			<image 
				src="%APP%/data/images/media_interface/refresh.png"
				scale="0.5, 0.5"
				color="222222"
				position="2, 2"/>
			<text
				font="button:text"
				position="45, 8"
			>refresh layout</text>
		</sprite_button>
		
		<sprite_button name="animate_layout" 
		width="200"
		height="35"
		animate_on="slide:-100; fade:-1.0; delay:0.4; duration:0.5; ease:outBack"
		>
			<sprite
				color="eeeeee"
				opacity="0.9"
				blend_mode="normal"
				size="200, 35" />
			<image 
				src="%APP%/data/images/media_interface/touch.png"
				scale="0.5, 0.5"
				color="222222"
				position="2, 2"/>
			<text
				font="button:text"
				position="45, 8"
			>animate on</text>
		</sprite_button>
		
		<sprite_button name="save_layout" 
		width="200"
		height="35"
		animate_on="slide:-100; fade:-1.0; delay:0.4; duration:0.5; ease:outBack"
		>
			<sprite
				color="eeeeee"
				opacity="0.9"
				blend_mode="normal"
				size="200, 35" />
			<image 
				src="%APP%/data/images/media_interface/save.png"
				scale="0.5, 0.5"
				color="222222"
				position="2, 2"/>
			<text
				font="button:text"
				position="45, 8"
			>save layout</text>
		</sprite_button>
			
	</layout>		

</interface>

