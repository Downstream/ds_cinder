<interface>

	<layout_button name="the_button" 
		size="40, 40"
		layout_size_mode="fixed"
		layout_type="vert"
		center="0.5, 0.5"
		animate_on="grow; ease:outQuint; duration:0.4; delay:0.1"
		overall_alignment="center"
		>

		<circle name="sizer" 
			radius="5"
			color="white"
			opacity="0.8"
			center="0.5, 0.5"
			layout_h_align="center"
			/>
			


		<border name="the_border" 
			attach_state="high"
			size="10, 10"
			layout_size_mode="fill"
			color="white"
			border_width="2"
			opacity="0.9"
			corner_radius="5"
			/>		
	
				
		
	</layout_button>
		
	
	
		
</interface>

