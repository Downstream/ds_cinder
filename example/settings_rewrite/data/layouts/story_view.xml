<interface>

		<layout name="root_layout"
				layout_type="vert"
				layout_size_mode="flex"
				position="0, 0"				
				size="1200, 800"
				shrink_to_children="both"
			>
			
			<sprite name="background"
				color="dark_blue"
				opacity="0.95"
				blend_mode="normal"
				layout_size_mode="fill"
				/>
			
			<layout name="header_layout"
				layout_type="vert"
				layout_size_mode="flex"
				layout_spacing="5"
				l_pad="20"
				t_pad="20"
				r_pad="20"
				b_pad="20"
				position="0, 0"
				shrink_to_children="both"
			>
			
		
				<text name="message"
					font="media_viewer:title"
					layout_v_align="middle"
					layout_size_mode="flex"
					font_size="48"
					animate_on="fade; ease:outQuint; slide:200, 0; duration:0.4"
					>Launcher</text>
					
				<sprite name="spacer_one" 
					layout_size_mode="flex"
					color="white"
					size="200, 1"
					t_pad="5"
					b_pad="5"
					opacity="0.5"
					animate_on="fade; delay:0.5; duration:0.4"
				/>
				<image name="primary_image"
					layout_size_mode="flex"
					animate_on="fade; delay:0.5; duration:0.4"
					/>
					
				<layout layout_type="horiz"
					t_pad="40"
					b_pad="10"
					layout_spacing="5"
				>
				<text name="sample_setting"
					font="media_viewer:title"
					layout_v_align="middle"
					layout_size_mode="flex"
					font_size="14"
					animate_on="fade; ease:outQuint; slide:200, 0; duration:0.4"
					>server:send_port</text>
					
				<text name="sample_value"
					font="media_viewer:title"
					layout_v_align="middle"
					layout_size_mode="flex"
					font_name="Noto Sans Bold"
					font_size="14"
					animate_on="fade; ease:outQuint; slide:200, 0; duration:0.4"
					>10370</text>
				</layout>
					
				<text name="sample_comment"
					font="media_viewer:title"
					layout_v_align="middle"
					layout_size_mode="flex"
					font_size="10"
					b_pad="10"
					animate_on="fade; ease:outQuint; slide:200, 0; duration:0.4"
					>The port to send to the server</text>
					
					
				<sprite name="spacer_two" 
					layout_size_mode="flex"
					color="white"
					size="200, 1"
					t_pad="5"
					b_pad="5"
					opacity="0.5"
					animate_on="fade; delay:0.5; duration:0.4"
				/>
				<xml name="quit_button" src="%APP%/data/layouts/icon_label_button.xml" >
					<property name="the_button" on_click_event="RequestAppExitEvent"  />
					<property name="high_icon" src="%APP%/data/images/media_interface/close_normal.png" scale="0.25, 0.25" position="50, 23" />
					<property name="high_label" text="Quit" />
				</xml>
			</layout>
		</layout>
	
	
</interface>

