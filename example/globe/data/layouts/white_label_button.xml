<interface>

	<sprite_button name="the_button"
		size="200, 45"
		center="0.5, 0.5"
		layout_h_align="center"
		animate_on="fade; ease:outQuint; duration:0.4; delay:0.1"
		>

		<sprite name="shadow1"
			attach_state="normal"
			position="3, 3"
			size="200, 45"
			color="black"
			opacity="0.1"
		/>
		<sprite name="shadow2"
			attach_state="high"
			position="3, 3"
			size="200, 45"
			color="black"
			opacity="0.1"
		/>
		<sprite name="background"
			attach_state="normal"
			size="200, 45"
			color="white"
			opacity="0.5"
			corner_radius="0"
			/>

		<sprite name="color_overlay"
			attach_state="high"
			size="200, 45"
			color="white"
			opacity="0.2"
			corner_radius="0"
			/>

		<border name="the_border"
			size="200, 45"
			color="white"
			border_width="1"
			opacity="0.5"
			corner_radius="0"
			/>

		<multiline_text
			name="high_label"
			font="globe:filter"
			color="white"
			text_align="center"
			position="100, 10"
			center="0.5, 0.5"
			/>

	</sprite_button>

</interface>
