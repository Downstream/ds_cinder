////////////////////////////////////////////////////////////////////////
// Fragment shader inputs (from C++)
////////////////////////////////////////////////////////////////////////

// Cinder example: ci::gl::Texture::getId()
uniform sampler2D tex0;

////////////////////////////////////////////////////////////////////////
// Fragment shader inputs (from Vertex shader)
////////////////////////////////////////////////////////////////////////

varying vec4 texCoords;

////////////////////////////////////////////////////////////////////////
// Fragment shader defines
////////////////////////////////////////////////////////////////////////

#define PI 3.1415926

////////////////////////////////////////////////////////////////////////
// Fragment shader texturing main()
////////////////////////////////////////////////////////////////////////

void main(void) {
	vec2 longLat = vec2(
	1.0 - (atan(texCoords.y, texCoords.x) / PI + 1.0) * 0.5,
	1.0 - (asin(texCoords.z) / PI + 0.5));

	gl_FragColor = texture2D(tex0, longLat);
}