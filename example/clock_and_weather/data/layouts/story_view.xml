<interface>

	<layout name="root_layout"
			layout_type="horiz"
			overall_alignment="center"
			enable="true"
			size="$_world_size"
		>
		
		<image src="%APP%/data/images/background.jpg"
			layout_size_mode="fill"
			opacity="0.5"/>
			
		<clock_view
			layout_h_align="center"
			layout_v_align="middle"
			pad_all="100" 
			/>
		<weather_view  
			layout_h_align="center"
			layout_v_align="middle"
		/>
			
			
	</layout>
	
	
</interface>


